{
  "name": "api-boilerplate",
  "version": "0.1.0",
  "description": "A RESTful API boilerplate with Koa for personal usage",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ignore-pattern build --ignore-pattern coverage .",
    "test": "NODE_ENV=test mocha --recursive --compilers js:babel-core/register -r co-mocha -r ./test/setup 'test/**/*.spec.js'",
    "test-cov": "NODE_ENV=test babel-node node_modules/.bin/isparta cover node_modules/.bin/_mocha --report lcovonly -- --recursive -r co-mocha -r ./test/setup 'test/**/*.spec.js'",
    "dev": "NODE_ENV=development nodemon -i test --debug -- -r babel-core/register src/index.js",
    "build": "babel --out-dir build src --source-maps inline",
    "start": "pm2 startOrRestart pm2.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhen0409/api-boilerplate.git"
  },
  "author": "Jhen <developer@jhen.me>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015-node-auto": "0.0.2",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "co-mocha": "^1.1.2",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.2.0",
    "isparta": "^4.0.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "proxyquire": "^1.7.4",
    "sinon": "^1.17.3",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.0.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.7.4",
    "bcrypt": "^0.8.5",
    "co-redis": "^2.1.0",
    "jsonschema": "^1.1.0",
    "jsonschema-is-js": "^0.2.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-generic-session": "^1.10.2",
    "koa-jsonschema": "^0.1.0",
    "koa-logger": "^2.0.0",
    "koa-redis": "^2.0.1",
    "koa-router": "^7.0.1",
    "lodash": "^4.6.1",
    "mongoose": "^4.4.9",
    "ms": "^0.7.1",
    "nlogger": "^1.0.0",
    "nodemailer": "^2.3.0",
    "pm2": "^1.0.2",
    "redis": "^2.5.3",
    "source-map-support": "^0.4.0"
  }
}
